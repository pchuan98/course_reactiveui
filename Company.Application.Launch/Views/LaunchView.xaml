<UserControl
    x:Class="Company.Application.Launch.Views.LaunchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Company.Application.Launch.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModules="clr-namespace:Company.Application.Launch.ViewModules"
    d:DataContext="{d:DesignInstance viewModules:LaunchViewModel}"
    mc:Ignorable="d">
    <Grid>
        <hc:CircleProgressBar
            ArcThickness="4"
            ShowText="True"
            Text="{Binding Percent}" />
    </Grid>
</UserControl>
